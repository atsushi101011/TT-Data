<div class="col-sm-12 col-lg-4 mb-3">
   <div id="pro_game-id-<%= pro_game.id %>">
     <div class="card">
       <div class="card-body">
         <h4 class="card-title">
           <%=link_to "#{pro_game.pro_user1.name}(#{pro_game.pro_team1.name}) VS #{pro_game.pro_user2.name}(#{pro_game.pro_team2.name})", "#" %>
         </h4>
         <ul class="list-inline">
           <li class="list-inline-item">
             <%= pro_game.tournament.name %>
           </li>
           <li class="list-inline-item">
             <%= pro_game.name %>
           </li>
         </ul>
         <%= link_to "編集", edit_pro_game_path(pro_game) %>
         <%= link_to "削除", pro_game_path(pro_game), method: :delete, data: {confirm: "削除しますか？"} %>
       </div>
     </div>
   </div>
 </div>