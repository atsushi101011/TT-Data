<div class="col-sm-12 col-lg-4 mb-3">
   <div id="game-id-<%= user_game.game.id %>">
     <div class="card">
       <div class="card-body">
         <h4 class="card-title">
           <%=link_to user_game.game.tournament_name, "#" %>
         </h4>
         <ul class="list-inline">
           <li class="list-inline-item">
             <%= icon 'far', 'user' %>
             <%= user_game.game.opponent_name %>
           </li>
           <li class="list-inline-item">
             <%= icon 'far', 'user' %>
             <%= user_game.game.opponent_team %>
           </li>
           <li class="list-inline-item">
             <%= icon 'far', 'calendar' %>
             <%= l user_game.game.date %>
           </li>
         </ul>
       </div>
     </div>
   </div>
 </div>