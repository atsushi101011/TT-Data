<div class="col-sm-12 col-lg-4 mb-3">
   <div id="game-id-<%= user_game.game.id %>">
     <div class="card">
       <div class="card-body">
         <h5 class="card-title">
         　　<%= link_to "#{current_user.name} VS #{user_game.game.opponent_name}(#{user_game.game.opponent_team})", "#" %>
         </h5>
         <ul class="list-inline">
           <li class="list-inline-item">
             <%= l user_game.game.date %>
           </li>
           <li class="list-inline-item">
           　　<%= user_game.game.tournament_name %>
           </li>
         </ul>
         <%= link_to "編集", edit_game_path(user_game.game) %>
         <%= link_to "削除", game_path(user_game.game), method: :delete, data: {confirm: "削除しますか？"} %>
       </div>
     </div>
   </div>
 </div>